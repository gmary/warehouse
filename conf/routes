# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.main(any = "none")
GET     /views/index                        controllers.Application.index
GET     /views/products                     controllers.Application.products

#GET     /api/products                      controllers.Products.all
#GET     /api/products/:id                  controllers.Users.find(id: String)

GET     /assets/*file                       controllers.Assets.at(path="/public", file)

GET     /*any                               controllers.Application.main(any)
